				await CrearProducto();
			}
			else
			{
				Producto.EmpleadoModificacion = empleado.EmpleadoId;
				await ActualizarProducto();
			}
			CancelaDialogValidaEmpleado();
		}
		else
			toastService.ShowError("Numero de empleado no valido", "Error");

		procesando = false;
